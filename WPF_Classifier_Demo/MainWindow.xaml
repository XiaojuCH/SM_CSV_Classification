<Window x:Class="ClassifierDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="光学特征分类器 Demo" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="光学特征分类系统"
                   FontSize="28" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- 初始化状态 -->
        <Border Grid.Row="1" Background="#E8F5E9" Padding="15"
                CornerRadius="5" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock x:Name="StatusText" Text="状态: 未初始化"
                           FontSize="14" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <!-- 功能选择 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Content="单样本预测" Width="150" Height="40"
                    Margin="10" FontSize="14" Click="SinglePredictButton_Click"/>
            <Button Content="批量 CSV 预测" Width="150" Height="40"
                    Margin="10" FontSize="14" Click="BatchPredictButton_Click"/>
        </StackPanel>

        <!-- 结果显示区域 - 分为左右两栏 -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：文字结果 -->
            <Border Grid.Column="0" BorderBrush="#BDBDBD" BorderThickness="1"
                    CornerRadius="5" Padding="10" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="ResultText"
                               FontFamily="Consolas" FontSize="12"
                               TextWrapping="Wrap"
                               Text="等待预测..."/>
                </ScrollViewer>
            </Border>

            <!-- 右侧：图表可视化 -->
            <Border Grid.Column="1" BorderBrush="#BDBDBD" BorderThickness="1"
                    CornerRadius="5" Padding="10" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 柱状图 -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="概率分布 - 柱状图" FontSize="14" FontWeight="Bold"
                                   Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        <oxy:PlotView x:Name="BarChartView" Height="220"/>
                    </StackPanel>

                    <!-- 饼图 -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock Text="概率分布 - 饼图" FontSize="14" FontWeight="Bold"
                                   Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        <oxy:PlotView x:Name="PieChartView" Height="220"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- 底部信息 -->
        <TextBlock Grid.Row="4"
                   Text="提示: 确保 DLL 和模型文件在程序目录下 | 图表会在预测后自动显示"
                   FontSize="11" Foreground="Gray"
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </Grid>
</Window>
